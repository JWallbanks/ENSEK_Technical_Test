@using Web.DTOs
@model List<AccountDto>

@{
    ViewData["Title"] = "Accounts - Index";
    Layout = "_Layout";
}

<h1>Accounts</h1>

<table class="table mt-5">
    <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Details</th>
    </tr>

    @for (var i = 0; i < Model.Count; i++)
    {
        var account = Model[i];

        <tr>
            <td>@account.AccountId</td>
            <td>@account.FullName</td>
            <td>
                <a asp-action="Details" class="btn btn-primary" asp-controller="Home" asp-route-accountId="@account.AccountId">Details</a>
            </td>
        </tr>
    }

</table>
